{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=finance.db"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "BackupSettings": {
    "Path": "Backups",
    "AutoBackupEnabled": true,
    "AutoBackupIntervalHours": 24
  },
  "ExportSettings": {
    "Path": "Exports",
    "DefaultDateFormat": "yyyy-MM-dd",
    "DefaultCurrencyFormat": "C"
  }
} 